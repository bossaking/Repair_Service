        <!--<Image Grid.Row="0"
               Width="250"
               Height="250"
               Margin="0,0,0,25"
               Source="../Images/Logo.jpeg"></Image>-->

        <!--#region LOGIN-->
        <WrapPanel
            Grid.Row="1"
            Margin="0,25,0,0"
            VerticalAlignment="Center">
            <materialDesign:PackIcon
                Width="25"
                Height="25"
                Margin="0,0,5,0"
                VerticalAlignment="Bottom"
                Kind="Account" />
            <TextBox
                Name="TextBoxLogin"
                Width="200"
                materialDesign:HintAssist.Hint="Login"
                materialDesign:TextFieldAssist.HasClearButton="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
        </WrapPanel>
        <!--#endregion-->

        <!--#region PASSWORD-->
        <WrapPanel
            Grid.Row="2"
            Margin="0,15,0,20"
            VerticalAlignment="Center">
            <materialDesign:PackIcon
                Width="25"
                Height="25"
                Margin="0,0,7,0"
                VerticalAlignment="Bottom"
                Kind="Key" />
            <PasswordBox
                Name="TextBoxPassword"
                Width="200"
                materialDesign:HintAssist.Hint="Password"
                materialDesign:TextFieldAssist.HasClearButton="True"
                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
        </WrapPanel>
        <!--#endregion-->

        <!--#region REMEMBER ME CHECKBOX-->
        <CheckBox
            Name="CheckBoxRememberMe"
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Unchecked="CheckBoxRememberMeUnchecked">
            Remember me
        </CheckBox>
        <!--#endregion-->

        <!--#region SIGN IN BUTTON-->
        <Button
            Name="ButtonLogin"
            Grid.Row="4"
            Width="100"
            Height="30"
            Margin="0,30,0,0"
            VerticalContentAlignment="Center"
            Click="LoginButton_Click">
            Sign in
        </Button>
        <!--#endregion-->

        <!--#region  PROGRESS BAR-->
        <ProgressBar
            Name="ProgressBar"
            Grid.Row="5"
            Width="200"
            Height="15"
            Margin="0,40,0,0"
            IsIndeterminate="True"
            Visibility="Hidden" />
        <!--#endregion-->
    </Grid>

</Page>