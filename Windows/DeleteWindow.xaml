<Window
    x:Class="Repair_Service.DeleteWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Repair_Service"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DeleteWindow"
    Width="300"
    Height="200"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Background="White"
        BorderBrush="Gray"
        BorderThickness="1"
        CornerRadius="40">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                FontSize="30"
                FontWeight="ExtraBold"
                Foreground="Black">
                DELETE ITEM
            </TextBlock>
            <TextBlock
                Grid.Row="1"
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="ExtraBold"
                Foreground="Black"
                TextAlignment="Center"
                TextWrapping="Wrap">
                Are you sure you want to remove the selected order?
            </TextBlock>
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="75"
                    Margin="5"
                    Click="YesButton_Click"
                    IsDefault="True">
                    YES
                </Button>
                <Button
                    Width="75"
                    Margin="5"
                    Click="NoButton_Click"
                    IsCancel="True">
                    NO
                </Button>
            </StackPanel>
        </Grid>
    </Border>

</Window>
