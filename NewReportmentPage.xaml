<Page x:Class="Repair_Service.NewReportmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Repair_Service"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewReportmentPage">

    <Grid ShowGridLines="False" Background="White" Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Content="Imię:"/>
        <TextBox Grid.Row="0" Grid.Column="1"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Nazwisko:"/>
        <TextBox Grid.Row="1" Grid.Column="1"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Numer telefonu:"/>
        <TextBox Grid.Row="2" Grid.Column="1"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Model"/>
        <TextBox Grid.Row="3" Grid.Column="1"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Typ urządzenia:"/>
        <ComboBox Grid.Row="4" Grid.Column="1">
            <ComboBoxItem Content="Smartfon"/>
            <ComboBoxItem Content="Laptop"/>
            <ComboBoxItem Content="PC"/>
            <ComboBoxItem Content="Telefon"/>
        </ComboBox>
        <Label Grid.Row="5" Grid.Column="0" Content="Koszt:"/>
        <TextBox Grid.Row="5" Grid.Column="1"/>
        <Label Grid.Row="6" Grid.Column="0" Content="Pracownik:"/>
        <ComboBox Grid.Row="6" Grid.Column="1">
            <ComboBoxItem Content="Janusz Wąs"/>
            <ComboBoxItem Content="Halina Glina"/>
            <ComboBoxItem Content="Robert Kurwica"/>
            <ComboBoxItem Content="Marian Paździoch"/>
        </ComboBox>
        <WrapPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <Button Padding="10,5" Width="75" IsDefault="True" Content="OK"/>
            <Button Padding="10,5" Margin="5,0,0,0" Width="75" IsCancel="True" Content="Anuluj" Click="ButtonCancel"/>
        </WrapPanel>
    </Grid>
</Page>
